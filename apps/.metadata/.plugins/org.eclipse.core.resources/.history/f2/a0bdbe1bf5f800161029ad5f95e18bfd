package fr.pizzeria.console;

public class Option {
	private int numChoix;
	private String contenuOption;

	public int getnChoix() {
		return numChoix;
	}

	public void setnChoix(int numChoix) {
		this.numChoix = numChoix;
	}

	public String getContenuOption() {
		return contenuOption;
	}

	public void setContenuOption(String contenuOption) {
		this.contenuOption = contenuOption;
	}

	public Option(int numChoix, String contenuOption) {
		this.contenuOption = contenuOption;
		this.numChoix = numChoix;
	}
}
