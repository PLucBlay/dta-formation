package fr.pizzeria.model;

import java.util.ArrayList;
import java.util.List;

import fr.pizzeria.dao.PizzaDao;
import fr.pizzeria.ihm.Menu;

public class PizzeriaAdminConsoleAppObjet {

	public static void main(String[] args) {
		List<Pizza> listePizzas = new ArrayList<Pizza>();
		listePizzas.add(new Pizza(1, "PEP", "La Pépéroni", 12.5));
		listePizzas.add(new Pizza(2, "MAR", "La Margherita", 14.00));
		listePizzas.add(new Pizza(3, "REI", "La Reine", 11.50));
		listePizzas.add(new Pizza(4, "FRO", "La 4 fromages", 12.00));
		listePizzas.add(new Pizza(5, "CAN", "La cannibale", 12.50));
		listePizzas.add(new Pizza(6, "SAV", "La savoyarde", 13.00));
		listePizzas.add(new Pizza(7, "ORI", "L'orientale", 13.50));
		listePizzas.add(new Pizza(8, "IND", "L'indienne", 14.00));
		PizzaDao dao = new PizzaDao(listePizzas);
		Menu menu = new Menu(dao);
		menu.execute();
	}

}
