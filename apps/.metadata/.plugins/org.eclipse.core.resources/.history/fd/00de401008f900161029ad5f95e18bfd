package fr.pizzeria.objet;

public class Pizza {
	private int id;
	private String code;
	private String nom;
	private double prix;
	private static int nbPizzas;


	public Pizza(String codePizza, String nomPizza, String prixPizza) {
		this.codePizza = codePizza;
		this.nomPizza = nomPizza;
		this.prixPizza = prixPizza;
	}

	public void printPizza() {
		System.out.println(codePizza + " - " + nomPizza + " (" + prixPizza + " €)");
	}
}
